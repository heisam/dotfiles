[user]
  name = <%= ENV['GIT_NAME'] %>
  email = <%= ENV['GIT_EMAIL'] %>
[github]
  user = <%= ENV['GITHUB_USER'] %>

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = /.gitignore
	editor = subl -n -w

[alias]
  st = status
  ci = commit
  co = checkout
  fe = fetch -p
  ba = branch -a
  br = branch
  pl = pull
  df = diff
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[pull]
  default = current

[push]
  default = current

[diff]
  tool = opendiff

[merge]
  tool = opendiff
  summary = true

[pivotal-tracker]
  token = PIVOTAL_TOKEN
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
